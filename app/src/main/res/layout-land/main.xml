					android:layout_height="wrap_content" android:id="@+id/button33"
					android:text="Qu" android:layout_width="fill_parent" android:layout_weight="1" 
					 android:onClick="letterClick"></Button>
				<Button android:textSize="18dip" android:textStyle="bold"
