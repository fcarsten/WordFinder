<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
        android:layout_height="0dp"
		android:layout_weight="1"
		android:baselineAligned="false">

		<ListView
			android:layout_height="fill_parent"
			android:id="@+id/playerResultsList"
			android:layout_width="wrap_content"
			android:layout_weight="2"
            />

		<TableLayout
            android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:layout_weight="1">
			<TableRow
                android:id="@+id/tableRow1"
                android:layout_height="fill_parent"
				android:layout_width="fill_parent"
                android:layout_weight="1"
                style="?android:attr/buttonBarStyle" >

				<Button
					style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:id="@+id/button01"
					android:text="@string/qu"
					android:layout_height="fill_parent"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:id="@+id/button02"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button03"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button04"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
			</TableRow>
			<TableRow android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/tableRow2"
                android:layout_height="fill_parent"
				android:layout_width="fill_parent"   >
				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button11"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button12"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button13"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button14"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
			</TableRow>
			<TableRow android:orientation="horizontal"
                android:layout_weight="1"
                android:id="@+id/tableRow3"
                android:layout_height="fill_parent"
				android:layout_width="fill_parent"
                >

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button21"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button22"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button23"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button24"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
			</TableRow>
			<TableRow android:orientation="horizontal"
                android:id="@+id/tableRow4"
                android:layout_height="fill_parent"
				android:layout_width="fill_parent"
                android:layout_weight="1"
                >

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button31"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button32"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button33"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />

				<Button
                    style="?android:attr/buttonBarStyle"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="fill_parent"
					android:id="@+id/button34"
					android:text="@string/qu"
					android:layout_width="fill_parent"
					android:onClick="letterClick" />
			</TableRow>
		</TableLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="2">

			<ListView
				android:layout_height="0dp"
				android:minHeight="6sp"
				android:id="@+id/computerResultsList"
				android:layout_width="fill_parent"
				android:layout_weight="1"
				android:visibility="invisible" />
			<LinearLayout android:orientation="horizontal"
                android:id="@+id/showAllRow"
				android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="solveClick"
                    android:text="@string/show_all"
                    />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

    <TableRow android:id="@+id/buttonRow"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="bottom">

        <Button
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/okButton"
            android:text=""
            android:layout_width="wrap_content"
            android:onClick="okClick" />

        <TextView
            android:text=" "
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="HardcodedText" />

        <TextView
            android:text=" "
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:text="    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/chronometer1"
            android:text="@string/_00_00" />

        <Button
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/shuffleButton"
            android:text="@string/shuffle"
            android:layout_width="wrap_content"
            android:onClick="shuffleClick" />
    </TableRow>
</LinearLayout>
