		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="3">
			<ListView android:layout_height="fill_parent"
				android:minHeight="6sp" android:id="@+id/computerResultsList"
				android:layout_width="fill_parent" android:layout_weight="1"
				android:visibility="invisible"></ListView>
			<LinearLayout android:orientation="horizontal" android:id="@+id/showAllRow"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="0" android:visibility="invisible">
				<LinearLayout android:orientation="horizontal"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_weight="1"></LinearLayout>
				<Button android:layout_height="wrap_content" 
					android:text="Show all" android:layout_width="wrap_content"
					android:layout_weight="0" android:onClick="solveClick"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<TableLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/tableLayout2"
		android:layout_weight="0">
		<TableRow android:id="@+id/buttonRow" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="0"
			android:gravity="bottom">
			<Button android:textSize="18dip" android:textStyle="bold"
				android:layout_height="wrap_content" android:id="@+id/okButton"
				android:text="" android:layout_width="wrap_content"
				android:layout_weight="0" android:onClick="okClick"></Button>
			<TextView android:text=" " 
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:editable="false" android:layout_weight="1"></TextView>
			<TextView android:text=" " android:id="@+id/scoreTextView"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:editable="false" android:layout_weight="0"></TextView>
			<TextView android:text="    " 
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:editable="false" android:layout_weight="0"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_weight="0" android:layout_width="wrap_content"
				android:id="@+id/chronometer1" android:text="00:00"></TextView>
			<Button android:textSize="18dip" android:textStyle="bold"
				android:layout_height="wrap_content" android:id="@+id/shuffleButton"
				android:text="Shuffle" android:layout_width="wrap_content"
				android:layout_weight="0" android:onClick="shuffleClick"></Button>
		</TableRow>
	</TableLayout>
