<resources>
    <style name="KeyBoardButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:backgroundTint">@null</item> <!-- Prevent Material default tint -->
        <item name="android:background">@drawable/letter_button_background_selector</item>
        <item name="android:fontFamily">@font/arco</item>
        <item name="android:textColor">@color/letter_button_text_color</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:text">Qu</item>
    </style>
</resources>

